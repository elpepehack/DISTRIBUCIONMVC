@model T2_PILCO_JOSEE.Models.Distribuidor
@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Crear</h1>

<form method="post" asp-action="Crear">
    <div class="border p-3">
       
        <div class="form-group row">
            <h2 class="text-intro pl-3">Nuevo Distribuidor</h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="NombreDistribuidor" class="form-label">Nombre del Distribuidor</label>
                    <input asp-for="NombreDistribuidor" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="RazonSocial" class="form-label">Razón Social</label>
                    <input asp-for="RazonSocial" class="form-control" />
                   
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Telefono" class="form-label">Teléfono</label>
                    <input asp-for="Telefono" class="form-control" />
              
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="AnioInicioOperacion" class="form-label">Año de Inicio</label>
                    <input asp-for="AnioInicioOperacion" class="form-control" />
                   
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Contacto" class="form-label">Contacto</label>
                    <input asp-for="Contacto" class="form-control" />
                   
                </div>
            </div>

            <div class="d-grid gap-2 d-md-block mt-3">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a asp-controller="Distribuidor" asp-action="Index" class="btn btn-success">Regresar</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


